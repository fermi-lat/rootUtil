package rootUtil
version v0r0

use GlastPolicy v*

apply_pattern package_headers
apply_pattern package_include
apply_pattern package_linkopts
apply_pattern ld_library_path

private
use facilities v*
use RootPolicy v2r*

apply_pattern package_shlibflags

library rootUtil *.cxx ${rootUtil_headers}

macro_append cppflags "" \
       Win32Debug ' /D "VISUAL_CPLUSPLUS" ' \
       Win32      ' /D "VISUAL_CPLUSPLUS" '

application test_rootUtil test/*.cxx
